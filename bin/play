#!/usr/bin/env ruby

require 'dispel'
require 'pry'
require './nethack'

# draw app and redraw after each keystroke
grid = Grid.new(height: 10, width: 10)
player = Player.new
grid.populate_cell(0, 0, player)
player_mover = Mover.new(grid, player)


Dispel::Screen.open do |screen|

  screen.draw grid.draw

  Dispel::Keyboard.output do |key|
    player_mover.move(:left) if key == :h
    break if key == :"Ctrl+c"
    screen.draw grid.draw
  end
end
