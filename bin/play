#!/usr/bin/env ruby

require 'dispel'
require 'pry'
require './nethack'

# draw app and redraw after each keystroke
game = Game.new
environment = game.setup
map, player = environment.fetch(:map), environment.fetch(:player)
ui = UiHelper.new(map: map, player: player)

Dispel::Screen.open do |screen|

  screen.draw ui.draw

  Dispel::Keyboard.output do |key|
    break if key == :"Ctrl+c"
    game.step(key)
    screen.draw ui.draw
  end
end
