#!/usr/bin/env ruby

require 'dispel'
require './nethack'

# draw app and redraw after each keystroke
Dispel::Screen.open do |screen|
  board = Grid.new(x: 10, y: 10).draw
  screen.draw board

  Dispel::Keyboard.output do |key|
    screen.draw board
    break if key == :"Ctrl+c"
    screen.draw "Looks like you pressed #{key} (Ctrl+c to quit)"
  end
end
