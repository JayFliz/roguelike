#!/usr/bin/env ruby

require 'dispel'
require 'pry'
require './lib/rogue'

Rogue.initialize

ui = Rogue::UiHelper.new(map: Rogue.map, player: Rogue.game.player, messages: Rogue.game.messages)

Dispel::Screen.open do |screen|

  screen.draw ui.draw

  Dispel::Keyboard.output do |key|
    break if key == :"Ctrl+c"
    Rogue.game.step(key)
    screen.draw ui.draw
  end
end

