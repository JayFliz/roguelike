#!/usr/bin/env ruby

require 'dispel'
require 'pry'
require './nethack'

# draw app and redraw after each keystroke
game = Game.new
ui = UiHelper.new(map: game.setup)

Dispel::Screen.open do |screen|

  screen.draw ui.draw

  Dispel::Keyboard.output do |key|
    break if key == :"Ctrl+c"
    game.step(key)
    screen.draw ui.draw
  end
end
